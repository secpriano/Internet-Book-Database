@model IBDbWebApplication.Models.AdminModels.BookModels.BookViewModel
@{
    ViewData["Title"] = "IBDb | Admin book";
}

<div class="container">
    <div class="hero">
        <h1>Manage books</h1>
    </div>
    <section>
        <ul class="operations">
            <li>
                <div class="operation-button" onclick="ShowDialogAddBook()">
                    <p>âž•</p>
                    <h2>Create</h2>
                </div>
                <dialog id="AddBookForm">
                    <h3>Add a book</h3>
                    @using (Html.BeginForm("AddBook", "Book", FormMethod.Post))
                    {
                        <button type="button" class="btn-close" onclick="CloseDialogAddBook()">X</button>
                        <fieldset>
                            <label>Isbn</label>
                            <input placeholder="0123456789123" asp-for="Isbn"/>
                        </fieldset>
                        <fieldset>
                            <label>Title</label>
                            <input placeholder="The Hobbit" asp-for="Title"/>
                        </fieldset>
                        <fieldset>
                            <label>Synopsis</label>
                            <textarea placeholder="The Hobbit is a children's fantasy novel by J. R. R. Tolkien. It was published on 21 September 1937 to wide critical acclaim, being nominated for the Carnegie Medal and awarded a prize from the New York Herald Tribune for best juvenile fiction. The book remains popular and is recognized as a classic in children's literature." asp-for="Synopsis"></textarea>
                        </fieldset>
                        <fieldset>
                            <label>Publish date</label>
                            <input id="PublishDate" asp-for="PublishDate"/>
                        </fieldset>
                        <fieldset>
                            <label>Amount pages</label>
                            <input placeholder="295" asp-for="AmountPages"/>
                        </fieldset>
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Authors)
                            @Html.DropDownListFor(Model => Model.Authors , new SelectList(Model.AuthorModels, "Id", "Name", Model.Authors), "-- Select Author --", new { @class = "form-control",  @id = "select-genre" })
                            @Html.ValidationMessageFor(Model => Model.Authors, "", new { @class = "text-danger" })
                        </div>

                        <fieldset>
                            <label>Publisher</label>
                            <select id="SelectType" asp-for="Publisher">
                                @foreach (var publisherModel in Model.PublisherModels)
                                {
                                    <option value="@publisherModel.Id">@publisherModel.Name</option>
                                }
                            </select>
                        </fieldset>
                        <fieldset>
                            <label>Genre</label>
                            <select id="SelectType" asp-for="Genres">
                                @foreach (var genreModel in Model.GenreModels)
                                {
                                    <option value="@genreModel.Id">@genreModel.Name</option>
                                }
                            </select>
                        </fieldset>
                        <fieldset>
                            <label>Theme</label>
                            <select id="SelectType" asp-for="Themes">
                                @foreach (var themeModel in Model.ThemeModels)
                                {
                                    <option value="@themeModel.Id">@themeModel.Description</option>
                                }
                            </select>
                        </fieldset>
                        <fieldset>
                            <label>Setting</label>
                            <select id="SelectType" asp-for="Settings">
                                @foreach (var settingModel in Model.SettingModels)
                                {
                                    <option value="@settingModel.Id">@settingModel.Description</option>
                                }
                            </select>
                        </fieldset>
                        <button id="ButtonMelding" class="button announcementBtn" type="submit"></button>
                    }
                </dialog>
            </li>
        </ul>
    </section>
    @if (Model.BookModels is not null)
    {
        @foreach (var book in Model.BookModels)
        {
            <div>
                <div>
                    <h3>@book.Title</h3>
                    <p>@book.Isbn</p>
                    <p>@book.Publisher.Name</p>
                    <p>@book.AmountPages</p>

                    @foreach (var author in Model.AuthorModels)
                    {
                        <p>@author.Name</p>
                    }

                    @foreach (var genre in Model.GenreModels)
                    {
                        <p>@genre.Name</p>
                    }

                    @foreach (var theme in Model.ThemeModels)
                    {
                        <p>@theme.Description</p>
                    }

                    @foreach (var setting in Model.SettingModels)
                    {
                        <p>@setting.Description</p>
                    }
                </div>
            </div>
        }
    }
</div>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Authors, "Genre")
        @Html.DropDownListFor(model => model.Authors, new SelectList(Model.Authors), "Select a genre", new { @class = "form-control", @id = "select-genre" })
    </div>
    <!-- Other input fields -->

    <input type="submit" value="Create" class="btn btn-primary" />

    <!-- Include Select2 CSS and JavaScript files -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#select-genre').select2();
        });
    </script>
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#select-genre').select2();
    });
    
    function ShowDialogAddBook() {
        document.getElementById("AddBookForm").showModal();
    }

    function CloseDialogAddBook() {
        document.getElementById("AddBookForm").close();
    }
</script>
